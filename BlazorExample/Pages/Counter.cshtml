@page "/counter"
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button @onclick(IncrementCount(2))>Click me</button>

@functions {
    int currentCount = 0;

    Action IncrementCount(int a)
    {
        return () =>
        {
            currentCount = currentCount + a;
        };
    }
}
